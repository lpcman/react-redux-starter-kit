{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react"
    ],
    "plugins": [
        "babel",
        "react",
        "promise"
    ],
    "env": {
        "browser": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false,
        "__BASENAME__": false,
        "__PROJECTDIR__": false,
        "BASE_DIR": false,
        "GLOBAL_STORE": false
    },
    "rules": {
        "key-spacing": 0,
        "jsx-quotes": [ 2, "prefer-single"],
        "react/jsx-indent-props": [2, 4],
        "react/jsx-indent": [2, 4],
        "object-curly-spacing": [ 2, "always"],
        "no-mixed-spaces-and-tabs": [ 2, false],
        "unicode-bom": 0,
        "indent": [ 1, 4, { "SwitchCase": 1}],
        "linebreak-style": [ 0, "windows"],
        "eol-last": [ "error", "always"],
        "max-len": [ 1, 120],
        "semi": [ 2, "always"],
        "curly": [ 2, "all"],
        "no-use-before-define": [ "error", { "functions": true, "classes": true}],
        "no-loop-func": "error",
        "radix": "error",
        "quotes": [ 1, "single", "avoid-escape"],
        "no-multi-str": "error",
        "no-new-wrappers": 2,
        "no-new-object": "error",
        "no-new-func": 1,
        "no-array-constructor": 2,
        "guard-for-in": 1,
        "no-inner-declarations": [ 2, "functions"],
        "no-prototype-builtins": 2,
        "no-extend-native": 2,
        "no-proto": 2,
        "no-eval": 2,
        "no-with": 2,
        "no-delete-var": "error"
    }
}
